<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Category Name -->
        <TextView
            android:id="@+id/category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />

        <!-- Progress Bar for Category Budget Usage -->
        <ProgressBar
            android:id="@+id/category_budget_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progressTint="@color/colorPrimary"
            android:backgroundTint="@color/progress_background"
            android:layout_marginTop="8dp" />

        <!-- Budget Details (including amount) -->
        <TextView
            android:id="@+id/category_budget_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Used $0 out of $0"
            android:textSize="14sp"
            android:paddingTop="4dp"
            android:textColor="@color/text_secondary" />

        <!-- Budget Amount -->
        <TextView
            android:id="@+id/budget_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Budget Amount: $0.00"
            android:textSize="14sp"
            android:paddingTop="4dp"
            android:textColor="@color/text_secondary" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
